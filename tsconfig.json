{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./build/",
    "rootDir": "./src/",
    "module": "commonjs",
    // "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  }
}
